<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>


    <div class="shell">
        <!-- Header -->
        <div id="header">
            <h1 id="logo"><a href="/">shoparound</a></h1>
            <!-- Navigation -->
            <div id="navigation">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="#">Поддержка</a></li>
                </ul>
            </div>
            <!-- End Navigation -->
        </div>
        <!-- End Header -->
        <!-- Main -->
        <div id="main">
            <div class="cl">&nbsp;</div>

            <!-- Content -->
            <div id="content">
                @RenderBody()
            </div>

            <!-- Sidebar -->
            <div id="sidebar">

                <!-- Search -->
                <div class="box search">
                    <h2>Поиск по:<span></span></h2>
                    <div class="box-content">
                        <form action="" method="post">

                            <label>Ключевое слово</label>
                            <input type="text" class="field" />

                            <label>Категория</label>
                            <select class="field">
                                <option value="">-- Выберите категорию --</option>
                            </select>

                            <div class="inline-field">
                                <label>Цена</label>
                                <select class="field small-field">
                                    <option value="">$50</option>
                                    <option value="">$100</option>
                                    <option value="">$200</option>
                                </select>
                                <label>по:</label>
                                <select class="field small-field">
                                    <option value="">$300</option>
                                    <option value="">$400</option>
                                    <option value="">$500</option>
                                </select>
                            </div>

                            <input type="submit" class="search-submit" value="Поиск" />

                        </form>
                    </div>
                </div>
                <!-- End Search -->
                <!-- Categories -->
                <div class="box categories">
                    <h2>Категории<span></span></h2>
                    <div class="box-content">
                        <ul>
                            <li><a href="#">Смартфон</a></li>
                            <li><a href="#">Планшен</a></li>
                            <li><a href="#">Электронная книга</a></li>
                            <li class="last"><a href="#">и т.д.</a></li>
                        </ul>
                    </div>

                    <h2>Имена таблиц<span></span></h2>
                    <div class="box-content">
                        <ul>
                            <li>@Html.ActionLink("Категории", "Index", "Categories")</li>
                            <li>@Html.ActionLink("Цвета", "Index", "Colors")</li>
                            <li>@Html.ActionLink("Страны", "Index", "Countries")</li>
                            <li>@Html.ActionLink("Консультанты", "Index", "Consultants")</li>
                            <li>@Html.ActionLink("Устройства", "Index", "Devices")</li>
                            <li>@Html.ActionLink("Цифровые камеры", "Index", "DigitalCameras")</li>
                            <li>@Html.ActionLink("Производители", "Index", "Makers")</li>
                            <li>@Html.ActionLink("Операционные системы", "Index", "OperatingSystems")</li>
                            <li>@Html.ActionLink("Процессоры", "Index", "Processors")</li>
                            <li>@Html.ActionLink("Разрешения экрана", "Index", "ScreenResolutions")</li>
                            <li>@Html.ActionLink("Отзывы", "Index", "Reviews")</li>
                        </ul>
                    </div>
                    <h2>Действия(только админ)<span></span></h2>
                    <div class="box-content">
                        <ul>
                            <li><a href="#">Отзывы</a></li>
                            <li class="last"><a href="#">Статистика</a></li>
                        </ul>
                    </div>
                </div>
                <!-- End Categories -->

            </div>
            <!-- End Sidebar -->
            <!-- Footer -->
            </div>
           
        

        <div class="cl">&nbsp;</div>
        <div id="footer">
            <p class="left">
                <a href="#">Home</a>
                <span>|</span>
                <a href="#">Поддержка</a>
            </p>
            <p class="right">
                &copy; 2010 Shop Around.
                Design by
            </p>
        </div>
        <!-- End Footer -->
    </div>

